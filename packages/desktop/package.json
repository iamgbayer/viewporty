{
  "name": "@viewporty/desktop",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@viewporty/components": "^1.0.0",
    "@craco/craco": "^5.6.4",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/ramda": "^0.27.4",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "craco-alias": "^2.1.1",
    "cross-env": "^7.0.2",
    "easy-peasy": "^3.3.0",
    "electron-is-dev": "^1.2.0",
    "eventemitter3": "^4.0.0",
    "immutability-helper": "^3.0.2",
    "localforage": "^1.7.3",
    "ramda": "^0.27.0",
    "react": "^16.13.1",
    "react-dnd": "^10.0.2",
    "react-dnd-html5-backend": "^10.0.2",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "redux-devtools-extension": "^2.13.8",
    "dom-inspector": "^1.2.3",
    "redux-persist": "^6.0.0",
    "re-resizable": "^6.4.0",
    "electron-devtools-installer": "^3.0.0",
    "styled-components": "^5.1.0",
    "styled-tools": "^1.7.1",
    "typescript": "~3.7.2"
  },
  "author": {
    "name": "Guilherme Bayer",
    "email": "iamgbayer@gmail.com",
    "url": "https://twitter.com/iamgbayer"
  },
  "build": {
    "appId": "com.viewporty",
    "productName": "Viewporty",
    "directories": {
      "buildResources": "assets",
      "output": "build"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "icons/icon.png"
    },
    "win": {
      "icon": "icons/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "desktop": {
        "MimeType": "x-scheme-handler/viewporty;"
      },
      "icon": "icons/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"cross-env PORT=3006 BROWSER=none craco start\" \"wait-on http://localhost:3006 && electron .\"",
    "build": "craco build && yarn electron-builder",
    "test": "craco test"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "rescripts": [
    "env"
  ],
  "devDependencies": {
    "concurrently": "^5.2.0",
    "electron-builder": "^22.6.1",
    "electron": "8.2.3",
    "wait-on": "^4.0.2"
  }
}
